<head>
  <title>Player Management</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/manage-style.css">
  <style>
    .navbar-nav {
      flex-direction: row;
      align-items: center;
      justify-content: center;
    }

    .form-control {
      max-width: 250px;
    }
  </style>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand">Admin Management</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto justify-content-center">
        <li class="nav-item">
          <button class="edit-player edit-user">Edit</button>
        </li>
        <li class="nav-item">
          <button class="save-player save-user">Save</button>
        </li>
        <li class="nav-item">
          <button class="icon-btn add-btn new-player new-user">
            <div class="add-icon"></div>
            <div class="btn-txt">New</div>
          </button>
        </li>
      </ul>
    </div>
  </nav>

  <div class="container-fluid">
    <div class="row">
      <div class="col-md-4 list-container">
        <div class="card">
          {{#each users as |user|}}
          <div class="d-flex flex-row justify-content-between border border-dark">
            <h3>{{user.username}}</h3>
            {{!-- {{#if logged_in}} --}}
            <div class="d-flex align-items-center justify-content-end">
              <p class="font-weight-bold">{{user.team.team_name}}</p>
            </div>
            {{!-- {{/if}} --}}

            <div class="d-flex flex-row">
              <div class="d-flex align-items-center ml-3">
                <button class="view-player view-user" data-view="{{user.id}}">View</button>
                <button class="delete-player delete-user" data-delete="{{user.id}}">
                  <svg viewBox="0 0 448 512" class="svgIcon">
                    <path
                      d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z">
                    </path>
                  </svg>
                </button>
              </div>
              <div id="myModal" class="modal">
                <div class="modal-content w-1/3">
                  <span class="close d-flex justify-content-end">&times;</span>
                  <div class="flex flex-col items-center">
                    <p class="text-center text-gray-700 font-bold text-xl">Are you sure you want to remove
                      {{user.username}} from the system?</p>
                    <button id="modal-close"
                      class="d-flex text-center mt-4 bg-blue-500 hover:bg-blue-700 text-dark font-bold py-2 px-4 rounded">Remove</button>
                    <button id="modal-cancel"
                      class="d-flex text-center mt-4 bg-blue-500 hover:bg-blue-700 text-dark font-bold py-2 px-4 rounded">Cancel</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
          {{/each}}
          <ul class="list-group"></ul>
        </div>
      </div>

      <div class="col-8">
        <div class="mb-3">
          <label for="id-el" class="form-label">Id:</label>
          <input class="form-control id-el" style="width:100%;max-width:500px" maxlength="28" type="text" id="id-el" />
        </div>

        <div class="mb-3">
          <label for="username-el" class="form-label">Username:</label>
          <input class="form-control username-el" style="width:100%;max-width:500px" maxlength="28" type="text"
            id="username-el" />
        </div>

        <div class="mb-3">
          <label for="email-el" class="form-label">Email:</label>
          <input class="form-control email-el" style="width:100%;max-width:500px" maxlength="28" type="text"
            id="email-el" />
        </div>

        <div class="mb-3">
          <label for="password-el" class="form-label">Password:</label>
          <input class="form-control password-el" style="width:100%;max-width:500px" maxlength="28" type="text"
            id="password-el" />
        </div>

        <div class="mb-3">
          <label for="admin-el" class="form-label">Admin:</label>
          <input class="form-control admin-el" style="width:100%;max-width:500px" maxlength="100" type="text"
            id="admin-el" />
        </div>

        <div class="mb-3">
          <label for="team-name-el" class="form-label">Team Name:</label>
          <input class="form-control team-name-el" style="width:100%;max-width:500px" maxlength="100" type="text"
            id="team-name-el" />
        </div>
      </div>

    </div>
  </div>
  </div>

  <script src="/js/admin.js"></script>
</body>