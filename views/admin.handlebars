<div class="mt-1 text-center bg-dark">
  <a class="text-light p-3">Admin Management Page.</a>
  <div class="icons">
    <i class="fas fa-edit text-light edit-user"></i>
    <i class="fas fa-save text-light save-user"></i>
    <i class="fas fa-plus text-light new-user"></i>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-4 list-container">
      <div class="card">
        {{#each users as |user|}}
          <div class="d-flex flex-row justify-content-between border border-dark">
            <h3>{{user.username}} {{user.team_name}}</h3>
            {{!-- {{#if logged_in}}                   --}}
            <div class="d-flex align-items-center justify-content-end">
            <p style="font-size: 1em; font-weight: bolder;">{{user.username}}</p>
            </div>
            {{!-- {{/if}} --}}
            
            <div class="d-flex flex-row">
              <h3 class="d-flex align-items-center">{{user.email}}</h3>
              <div class="icons d-flex align-items-center ml-3">
                <i class="fas fa-eye view-user p-2 fa-lg" data-view="{{user.id}}"></i>
                <i class="fas fa-trash-alt delete-user fa-lg" data-delete="{{user.id}}"></i>
              </div>

              <div id="myModal" class="modal">
                <div class="modal-content w-1/3">
                  <span class="close d-flex justify-content-end">&times;</span>
                  <div class="flex flex-col items-center">
                    <p class="text-center text-gray-700 font-bold text-xl">Are you sure you want to remove {{user.username}} from the system?</p>
                    <button id="modal-close" class="d-flex text-center mt-4 bg-blue-500 hover:bg-blue-700 text-dark font-bold py-2 px-4 rounded">Remove</button>
                    <button id="modal-cancel" class="d-flex text-center mt-4 bg-blue-500 hover:bg-blue-700 text-dark font-bold py-2 px-4 rounded">Cancel</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
        <ul class="list-group"></ul>
      </div>
    </div>

    <div class="col-8">
      <div>
        <label for="username" style="width: 200px;">Username:</label>
        <input class="username" maxlength="28" type="text" id="username"/>
      </div>
      
      <div>
        <label for="email" style="width: 200px;">Email:</label>
        <input class="email" maxlength="28" type="text" id="email"/>
      </div>

      <div>
        <label for="password" style="width: 200px;">Password:</label>
        <input class="password" maxlength="28" type="text" id="password"/>
      </div>

      <div>
        <label for="admin" style="width: 200px;">Admin:</label>
        <input class="admin" maxlength="100" type="text" id="admin"/>
      </div>

      <div>
        <label for="team-name" style="width: 200px;">Team Name:</label>
        <select name="team-name" id="team-name" style="width: 182px;">
          <option value="1">Attacker</option>
          <option value="2">Defender</option>
        </select>
      </div>
      {{#if is_admin}}
        <div>
          <label for="team" style="width: 200px;">Team:</label>
          <select name="player-team" id="player-team" style="width: 182px;">
            {{#each teams as |team|}}
                <option value="{{team.id}}">{{team.team_name}}</option>
            {{/each}}
          </select>
        </div>
      {{/if}}

      <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
      <body>
      <canvas id="myChart" style="width:100%;max-width:700px"></canvas>

    </div>
  </div>
</div>