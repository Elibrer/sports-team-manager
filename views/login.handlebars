 <div class="container-sm container-fluid mt-5">
  <h2 class="pb-4 col d-flex justify-content-center" style="font-size: 2em;">Login</h2>
  <form class="login-form">
    <div class="form-group col d-flex justify-content-center">
      <label for="email-login" style="width: 100px;">Email:</label>
      <input class="form-input" type="text" id="email-login"/>
    </div>
    <div class="form-group col d-flex justify-content-center">
      <label for="password-login" style="width: 100px;">Password:</label>
      <input class="form-input" type="password" id="password-login"/>
    </div>
    <div class="form-group col d-flex justify-content-center">
      <button id="login-btn" class="btn btn-primary" type="submit">Login</button>
    </div>
  </form>
</div> 
<script src="/js/login.js"></script>
