            <div id="myModal" class="modal">
              <div class="modal-content w-1/3">
                <span class="close d-flex justify-content-end">&times;</span>
                <div class="flex flex-col items-center">
                  <p class="text-center text-gray-700 font-bold text-xl">Are you sure you want to remove
                    {{player.first_name}} {{player.last_name}} from the team?</p>
                  <button id="modal-close"
                    class="d-flex text-center mt-4 bg-blue-500 hover:bg-blue-700 text-dark font-bold py-2 px-4 rounded">Remove</button>
                  <button id="modal-cancel"
                    class="d-flex text-center mt-4 bg-blue-500 hover:bg-blue-700 text-dark font-bold py-2 px-4 rounded">Cancel</button>
                </div>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
        <ul class="list-group"></ul>
      </div>
    </div>


    <div class="col-8">
      <div>
        <label for="player-first-name" style="width: 200px;">Player first name:</label>
        <input class="player-first-name" maxlength="28" type="text" id="player-first-name" />
      </div>

      <div>
        <label for="player-last-name" style="width: 200px;">Player last name:</label>
        <input class="player-last-name" maxlength="28" type="text" id="player-last-name" />
      </div>

      <div>
        <label for="player-number" style="width: 200px;">Player number:</label>
        <input class="player-number" maxlength="28" type="text" id="player-number" />
      </div>

      <div>
        <label for="player-scores" style="width: 200px;">No. of scores:</label>
        <input class="player-scores" maxlength="100" type="text" id="player-scores" />
      </div>

      <div>
        <label for="player-position" style="width: 200px;">Position:</label>
        <select name="player-position" id="player-position" style="width: 182px;">
          <option value="1">Attacker</option>
          <option value="2">Defender</option>
        </select>
      </div>

      <div>
        <label for="player-fouls" style="width: 200px;">Player fouls:</label>
        <input class="player-fouls" maxlength="20" type="text" id="player-fouls" />
      </div>
      {{#if is_admin}}
      <div>
        <label for="player-team" style="width: 200px;">Team:</label>
        <select name="player-team" id="player-team" style="width: 182px;">
          {{#each teams as |team|}}
          <option value="{{team.id}}">{{team.team_name}}</option>
          {{/each}}
        </select>
      </div>
      {{/if}}

       
        <div class="container-fluid">
      <div class="row">
        <div class="col-5 list-container ">
          <div class="card m-3">

      
          <canvas class="justify-content-md-center" id="myChart" style="width:100%;max-width:500px"></canvas>
          <canvas class="justify-content-md-center" id="myChart1" style="width:100%;max-width:500px"></canvas>
         </div>
        </div>
      </div>
  

<script>

const xValues = [
   {{#each players as |player|}}
   "{{player.first_name}} {{player.last_name}}",
   {{/each}}
];
const yValues = [{{#each players as |player|}}
   {{player.player_scores}},
   {{/each}}];

const barColors = ["#bf6770",
"#7bb743",
"#ae59c8",
"#d4a236",
"#6475c9",
"#d1502a",
"#4bafd0",
"#d24157",
"#59b683",
"#d3498d",
"#547a35",
"#d390d0",
"#a08946",
"#99508c",
"#c37245"];

new Chart("myChart", {
  type: "bar",
  data: {
    labels: xValues,
    datasets: [{
      backgroundColor: barColors,
      data: yValues
    }]
  },
  options: {
    legend: {display: false},
    title: {
      display: true,
      text: "Goals scored by each team player"
    },
    scales: {
        yAxes: [{
            ticks: {
                beginAtZero: true
            }
        }]
    }
    
  }
});

const yValues1 = [{{#each players as |player|}}
   {{player.player_fouls}},
   {{/each}}];

new Chart("myChart1", {
  type: "bar",
  data: {
    labels: xValues,
    datasets: [{
      backgroundColor: barColors,
      data: yValues1
    }]
  },
  options: {
    legend: {display: false},
    title: {
      display: true,
      text: "Fouls recieved by each team player"
    },
    scales: {
        yAxes: [{
            ticks: {
                beginAtZero: true
            }
        }]
    }
  }
});

</script>
