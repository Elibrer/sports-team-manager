          {{!-- {{#if logged_in}} --}}
          <div class="d-flex align-items-center justify-content-end">
            <p style="font-size: 1em; font-weight: bolder;">{{player.team.team_name}}</p>
          </div>
          {{!-- {{/if}} --}}

          <div class="d-flex flex-row">
            <h3 class="d-flex align-items-center">#{{player.player_number}}</h3>
            <div class=" d-flex align-items-center ml-3">
              <i class="fas fa-eye view-player p-2 fa-lg" data-view="{{player.id}}"></i>



              <button class="delete-player""tooltip" data-delete="{{player.id}}">
